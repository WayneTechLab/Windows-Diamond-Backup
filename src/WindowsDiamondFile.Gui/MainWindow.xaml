<Window x:Class="WindowsDiamondFile.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows Diamond File" Height="760" Width="1080" MinHeight="700" MinWidth="980">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="24" FontWeight="Bold" Text="Windows Diamond File"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
            <TextBlock Width="160" VerticalAlignment="Center" Text="Output Drive/Folder:"/>
            <TextBox x:Name="OutputRootTextBox" Width="720" Margin="0,0,8,0"/>
            <Button Width="150" Content="Browse Output" Click="BrowseOutput_Click"/>
        </StackPanel>

        <GroupBox Grid.Row="2" Header="Source Drives / Folders" Margin="0,12,0,0">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8">
                    <Button Width="130" Margin="0,0,8,0" Content="Add Source" Click="AddSource_Click"/>
                    <Button Width="130" Margin="0,0,8,0" Content="Remove Selected" Click="RemoveSource_Click"/>
                    <Button Width="130" Content="Clear" Click="ClearSources_Click"/>
                </StackPanel>
                <ListBox x:Name="SourceListBox" Margin="8" Height="120"/>
            </DockPanel>
        </GroupBox>

        <Grid Grid.Row="3" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock VerticalAlignment="Center" Margin="0,0,8,0" Text="Duplicate Policy:"/>
                <ComboBox x:Name="DuplicatePolicyComboBox" Width="220"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock VerticalAlignment="Center" Margin="0,0,8,0" Text="Max Parallel Copies:"/>
                <TextBox x:Name="MaxParallelCopiesTextBox" Width="60" Text="8"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock VerticalAlignment="Center" Margin="0,0,8,0" Text="Photo DB Folder:"/>
                <TextBox x:Name="PhotoDbRootTextBox" Width="170" Text="Photo-Database"/>
            </StackPanel>

            <CheckBox Grid.Column="3" x:Name="DryRunCheckBox" Content="Dry Run" VerticalAlignment="Center"/>
        </Grid>

        <GroupBox Grid.Row="4" Header="Log" Margin="0,12,0,0">
            <TextBox x:Name="LogTextBox" Margin="8" FontFamily="Consolas" FontSize="13" IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
        </GroupBox>

        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,12,0,0">
            <CheckBox x:Name="PhotoMirrorCheckBox" Content="Enable Photo Database Mirror" IsChecked="True" Margin="0,0,14,0"/>
            <CheckBox x:Name="VerifyCheckBox" Content="Verify Copied Files" IsChecked="True" Margin="0,0,14,0"/>
            <CheckBox x:Name="ContinueOnAccessDeniedCheckBox" Content="Continue on Access Denied" IsChecked="True" Margin="0,0,14,0"/>
            <CheckBox x:Name="BlockHiddenSystemCheckBox" Content="Skip Hidden/System Files"/>
        </StackPanel>

        <Grid Grid.Row="6" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock x:Name="StatusTextBlock" FontWeight="SemiBold" Text="Ready."/>
                <ProgressBar x:Name="ProgressBar" Height="16" Margin="0,6,12,0" Minimum="0" Maximum="100" Value="0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SaveProfileButton" Width="140" Margin="0,0,8,0" Content="Save Profile" Click="SaveProfile_Click"/>
                <Button x:Name="LoadProfileButton" Width="140" Margin="0,0,8,0" Content="Load Profile" Click="LoadProfile_Click"/>
                <Button x:Name="CancelButton" Width="120" Margin="0,0,8,0" Content="Cancel" Click="CancelBackup_Click" IsEnabled="False"/>
                <Button x:Name="StartButton" Width="180" Height="34" FontWeight="Bold" Content="Start Backup" Click="StartBackup_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
